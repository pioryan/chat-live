<ul id="messages">

  <%- @messages.each do |message| %>
    <li>
      <%= "#{message.name}: #{message.content}" %>
    </li>
  <%- end %>
</ul>

<%= form_for Message.new, remote: true do |f| %>
  <%= f.text_field :name, placeholder: "Name" %>
  <%= f.text_field :content %>
  <%= f.submit "Send", id: "message_submit" %>
<% end %>
